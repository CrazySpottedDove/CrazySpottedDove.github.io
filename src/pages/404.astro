---
import AppLayout from "@layouts/AppLayout.astro";
const title = "Not found";
const description = "QAQ 似乎没有这个网页呢……";
---

<style is:inline>
  main,
  header,
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
    overflow-y: hidden;
  }

  main:not(.home) header
  {
    display: none;
  }

  nav, footer, .footer {
    display: none;
    opacity: 0;
  }
</style>

<AppLayout title={title} description={description}>
  <div class="flex flex-col items-center justify-center h-screen text-center text-zinc-300">

    <h1 class="font-bold text-4xl mb-4 text-center">
      404 Not Found
    </h1>
    <p class="text-xl font-thin text-center">{description}</p>

    <a class="px-4 py-2 mt-4 text-center bg-zinc-800 text-zinc-100 rounded-md cursor-pointer hover:bg-zinc-700 transition duration-200 ease-in-out" href="/">
      回到主页！
    </a>
  </div>
</AppLayout>
